{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["chai", "jest"],
    "paths": {
      "@/tasks": ["./tasks/index.ts"],
      "@/tasks/*": ["./tasks/*"],
      "@/tasks/utils": ["./tasks/utils/*"],
      "@/test/helpers": ["./test/helpers/index.ts"],
      "@/plugins": ["./plugins/index.ts"],
      "@/plugins/*": ["./plugins/*"],
      "@/contracts.json": ["./contracts.json"],
      "@/artifacts/*": ["./artifacts/contracts/*"],
      "@/legacy-artifacts/*": ["./legacy-artifacts/contracts/*"],
      "@/config/*": ["./config/*"],
      "@/utils/*": ["./utils/*"],
      "@/constants/*": ["./constants/*"],
      "@/deploy/*": ["./deploy/*"],
      "@/typechain-types/*": ["./typechain-types/*"],
      "@/typechain-types": ["./typechain-types/index.ts"],
      "@/test/*": ["./test/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "./.eslintrc.js", ".solcover.js"]
}
